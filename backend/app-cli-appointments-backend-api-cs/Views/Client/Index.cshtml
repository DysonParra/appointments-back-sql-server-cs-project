@model IEnumerable<Project.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StrClientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StrContactMobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StrContactMail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StrClientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StrContactMobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StrContactMail)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IntId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IntId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IntId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
